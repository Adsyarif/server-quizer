{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"] // Ensure this path is correct
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"], // Ensure this path is correct
  "exclude": ["node_modules"]
}
